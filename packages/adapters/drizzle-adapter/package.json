{
	"name": "@thia/adapters-drizzle",
	"version": "0.0.1",
	"main": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"type": "module",
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"default": "./dist/index.mjs",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "rollup -c",
		"dev": "rollup -c -w",
		"test": "vitest run",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "tsx src/__tests__/db.migrate.ts",
		"db:start": "docker run --rm -d -e POSTGRES_USER=test -e POSTGRES_PASSWORD=test -e POSTGRES_DB=thia_drizzle_test -p 5433:5432 --name pg-test postgres:15",
		"db:stop": "docker stop pg-test"
	},
	"dependencies": {
		"zod": "^3.0.0"
	},
	"peerDependencies": {
		"@thia/core": "workspace:*",
		"drizzle-orm": "^0.45.1",
		"typescript": "^5.0.0"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^28.0.1",
		"@rollup/plugin-multi-entry": "^6.0.1",
		"@rollup/plugin-node-resolve": "^15.3.0",
		"@rollup/plugin-typescript": "^12.1.1",
		"@types/node": "^20.19.11",
		"@types/pg": "^8.15.6",
		"dotenv": "^17.2.3",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.45.1",
		"pg": "^8.16.3",
		"rollup": "^4.28.1",
		"testcontainers": "^11.9.0",
		"ts-node": "^10.9.2",
		"tsx": "^4.20.6",
		"typescript": "^5.0.0",
		"vitest": "^3.2.4"
	}
}
